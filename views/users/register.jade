doctype html
html
    head
        title Register
    body
        div(style='float:left;margin:10px;')
            a(href='/') Home

        div(style='float:right')
            a(href='/signin', style='margin:10px;') Log In
            a(href='/forget', style='margin:10px;') Forgot password

        div(style='padding:50px;')
            form(name="login", action="/apis/user/add", method="post")
                h1 Register
                div
                    p
                        label(style='padding-right:50px') Username or e-mail
                        input(type="text", name="user",placeholder='username@example.com')
                    p
                        label(style='padding-right:120px')  password  
                        input(type="password", name="passwd")
                p
                    span(style='padding-right:265px')
                    input(type="submit", name="submit", value="Sign up")