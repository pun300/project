doctype html
html

    head
        title Welcome

    body
        div(style='float:left')
            a(href='/') Home

        div(style='float:right')
            if(email && authenticated)
                a(href='/signout', style='margin:10px;') Sign Out
                a(href='/add_article', style='margin:10px;') Add Article
                a(href='/profile', style='margin:10px;') Profile
                span #{username}
            else
                a(href='/signin', style='margin:10px;') Log In
                a(href='/register', style='margin:10px;') Register
                a(href='/forget', style='margin:10px;') Forgot password
    div(style='padding:50px;')
        h1=title

    for article in blogs
        div
            div(style='float:left;margin-top:10px;')= email
            div(style='float:right;margin-top:10px;')= article.date
            br
            div(style='clear:both')= article.content
            a(href='/update_article/'+ article._id, style='float:right;margin-top:105px;margin-right:20px;') update this article
            hr(style='margin-top:110px;')
     